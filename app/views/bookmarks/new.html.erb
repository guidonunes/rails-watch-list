<h3 class="text-center my-3">Add a Movie for <%= @list.name %></h3>

<%= simple_form_for [@list, @bookmark] do |f| %>
  <%= f.input :comment %>
  <%= f.input :movie_id, collection: @movies%>
  <%= f.submit 'Add', class: "btn btn-ghost mt-3" %>
  <%= link_to "Back", list_path(@list), class: "btn btn-ghost mt-3" %>
<% end %>
